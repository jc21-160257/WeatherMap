                <Label Grid.Column="0" Grid.Row="6" Text="" HorizontalOptions="Center" FontSize="13" x:Name="day6" TextColor="Black"/>
                <Label Grid.Column="1" Grid.Row="0" Text="行先" HorizontalOptions="Center" FontSize="15" TextColor="Blue"/>
                <Label Grid.Column="1" Grid.Row="1" Text="" HorizontalOptions="Center" FontSize="13" x:Name="venue1" TextColor="Black"/>
