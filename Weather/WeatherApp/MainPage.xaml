             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:WeatherApp"
             x:Class="WeatherApp.MainPage">

    <StackLayout>
        <!-- Place new controls here -->
        <StackLayout Orientation="Horizontal">
            <DatePicker Format="MM/dd" Grid.Row="1" Grid.Column="1" HorizontalOptions="Start"  FontSize="40" TextColor="Blue"/>
            <Button Text="更新" Grid.Column="2" HorizontalOptions="Start" x:Name="Button1"/>


