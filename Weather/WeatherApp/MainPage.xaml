                <Label Grid.Column="1" Grid.Row="6" Text="" HorizontalOptions="Center" FontSize="13" x:Name="venue6" TextColor="Black"/>
                <Label Grid.Column="2" Grid.Row="0" Text="行先天気" HorizontalOptions="Center" FontSize="15" TextColor="Blue"/>
                <Label Grid.Column="2" Grid.Row="1" Text="" HorizontalOptions="Center" FontSize="13" x:Name="weather1" TextColor="Black"/>
                <Label Grid.Column="2" Grid.Row="2" Text="" HorizontalOptions="Center" FontSize="13" x:Name="weather2" TextColor="Black"/>
